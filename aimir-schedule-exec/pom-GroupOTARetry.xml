  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <tasks>
            <property name="runtime_classpath" refid="maven.runtime.classpath"/>
            <echo message="runtime classpath: ${runtime_classpath}"/>
            <mkdir dir="${basedir}/${taskName}"/>
            <java dir="${basedir}/${taskName}"
                  classname="com.aimir.schedule.task.GroupOTARetryTask"
                  fork="true"
                  maxmemory="512M"
                  >
              <jvmarg value="-server"/>
              <jvmarg value="-javaagent:${spring.instrument.path}/spring-instrument-4.2.5.RELEASE.jar"/>
              <sysproperty key="name" value="${taskName}"/>
              <sysproperty key="file.encoding" value="UTF-8"/>
              <sysproperty key="jmx.remote.x.server.connection.timeout" value="20000"/>
              <sysproperty key="jmx.remote.x.client.connection.check.period" value="0"/>
              <sysproperty key="log4j.configuration" value="log4j-GroupOTARetry.xml"/>
              <arg value="-firmwareVersion"/>
              <arg value="${firmwareVersion}"/>
              <arg value="-firmwareFileName"/>
              <arg value="${firmwareFileName}"/>              
              <arg value="-deviceModelName"/>
              <arg value="${deviceModelName}"/>              
              <arg value="-locationName"/>
              <arg value="${locationName}"/>
              <arg value="-issueDate"/>
              <arg value="${issueDate}"/>              
              <classpath>
                <pathelement path=".:${runtime_classpath}"/>
              </classpath>
            </java>
          </tasks>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>${maven-bundle-plugin.version}</version>
        <extensions>true</extensions>
      </plugin>
    </plugins>
  </build>


