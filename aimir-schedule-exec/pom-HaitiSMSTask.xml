  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <tasks>
            <property name="runtime_classpath" refid="maven.runtime.classpath"/>
            <echo message="runtime classpath: ${runtime_classpath}"/>
            <java dir="${basedir}"
                  classname="com.aimir.schedule.task.HaitiSMSTask"
                  fork="true"
                  maxmemory="1024M"
                  >
              <jvmarg value="-server"/>
              <sysproperty key="name" value="HaitiSMSTask"/>
              <sysproperty key="file.encoding" value="UTF-8"/>
              <sysproperty key="jmx.remote.x.server.connection.timeout" value="20000"/>
              <sysproperty key="jmx.remote.x.client.connection.check.period" value="0"/>              
              <sysproperty key="log4j.configuration" value="log4j-HaitiSMSTask.xml"/>
              <arg value="-smsType"/>
              <arg value="${smsType}"/>
              <classpath>
                <pathelement path=".:${runtime_classpath}"/>
              </classpath>
            </java>
          </tasks>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>${maven-bundle-plugin.version}</version>
        <extensions>true</extensions>
      </plugin>
    </plugins>
  </build>
    
